<div class="operation-section">
  <a href="/admin/upload" class="btn">Back</a>
</div>

<% if flash[:message] %>
    <p class="alert alert-info flash-message"><%= flash[:message] %></p>
<% end %>

<%= form_tag({:action => "create"}, :multipart => true) do %>
    <div class="form-item">
      <label>File:</label>
      <%= file_field_tag :file, :class => "span8" %>
    </div>

    <div class="form-item-submit">
      <%= submit_tag "Upload", :class => "btn btn-info" %>
    </div>
<% end  %>
